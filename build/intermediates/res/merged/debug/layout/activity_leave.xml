<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
	android:weightSum="1">

    <RelativeLayout
        android:id="@+id/header3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0097a7"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:text="File Leave"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        
    </RelativeLayout>


	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="60dp"
		android:background="#555555"
		android:gravity="center">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
		android:paddingTop="10dp" >

		<EditText
			android:id="@+id/leaveName"
			android:background="@drawable/eid_background"
			android:layout_width="0dp"
			android:layout_height="40dp"
			android:layout_weight="0.75"
			android:ems="10"
			android:paddingLeft="70dp"
			android:hint="Enter EID"
			android:inputType="text|textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" >

        <EditText
            android:id="@+id/leaveDate"
            android:background="@drawable/date_background"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.75"
            android:ems="10"
            android:paddingLeft="70dp"
            android:inputType="date"
            android:hint="mm/dd/yyyy"
            android:focusableInTouchMode="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/textfield_background" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Type:"
            android:paddingLeft="6dp"
            android:paddingTop="8dp"
            android:textColor="@color/grey"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/leaveType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:textColor="@color/white"
            android:entries="@array/leave_arrays"
            android:prompt="@string/leave_prompt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textColor="@color/white"
            android:text="Status:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="For Approval"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Approved" />

        </RadioGroup>

    </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp" >

            <!--View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25" /-->

            <Button
                android:id="@+id/leaveSubmit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.370"
                android:background="@color/blue"
                android:onClick="submitLeave"
                android:text="Submit"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01" />

            <Button
                android:id="@+id/leaveCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.370"
                android:background="@color/blue"
                android:onClick="cancelView"
                android:text="Cancel"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>